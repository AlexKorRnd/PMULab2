<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextAppearance" parent="@style/TextAppearance.AppCompat"/>

    <!-- Text colors -->
    <color name="dark_text_primary">#DE000000</color>
    <color name="dark_text_secondary">#8A000000</color>
    <color name="dark_text_disabled">#61000000</color>
    <color name="dark_text_unfocused">#42000000</color>
    <color name="dark_divider">#1F000000</color>

    <color name="light_text_primary">#FFFFFF</color>
    <color name="light_text_secondary">#B3FFFFFF</color>
    <color name="light_text_disabled">#80FFFFFF</color>
    <color name="light_divider">#1FFFFFFF</color>

    <!-- Base styles -->
    <style name="AppTheme.TextAppearance.HeadLine">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.HeadLine.Light.Big">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>


    <style name="AppTheme.TextAppearance.HeadLineCount">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Title.Light">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.SubHeading1">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.SubHeading2">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1.Primary">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextAppearance.Body2">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.EditText"/>

    <style name="AppTheme.TextAppearance.EditText.Hint">
        <item name="android:textColor">@color/dark_text_unfocused</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Light styles -->
    <style name="AppTheme.TextAppearance.HeadLineCount.Light">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.SubHeading1.Light">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.HeadLine.Light">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1.Light">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Body2.Light">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption.Light">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption.Light.Primary">
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

</resources>